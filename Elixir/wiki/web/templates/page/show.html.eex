<h2 data-page-id="<%= @page.id %>">Show Page</h2>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @page.title %>
  </li>

  <li>
    <strong>Body:</strong>
    <%= wiki_to_html(@page.body) %>
  </li>

</ul>

<%= link "Edit", to: page_path(@conn, :edit, @page) %>
<%= link "Back", to: page_path(@conn, :index) %>
<%= render Wiki.CommentView, "index.html", conn: @conn, page: @page, comments: @page.comments %>
